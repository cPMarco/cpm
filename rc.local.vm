function mysqlerr() {
    custom_mysql_log=$(\grep '^log-error' /etc/my.cnf | cut -d= -f2);
    if [ "$custom_mysql_log" ];
        then date; mylog=$custom_mysql_log; echo $custom_mysql_log; less -I $custom_mysql_log;
    else date; mylog=/var/lib/mysql/$hn.err; echo $mylog; less -I $mylog;
    fi
}
